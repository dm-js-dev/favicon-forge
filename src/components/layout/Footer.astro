---
import Container from '../ui/Container.astro';
import GitHubStarButton from '../ui/GitHubStarButton.astro';
---

<footer class="bg-gray-900 dark:bg-gray-950 text-white">
  <Container>
    <div class="py-8">
      <div class="flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0">
        <div class="flex items-center space-x-2">
          <div class="w-6 h-6 bg-blue-600 rounded flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <span class="font-semibold">FavIcon Forge</span>
        </div>
        
        <div class="text-sm text-gray-400 text-center">
          <p>&copy; 2024 FavIcon Forge. Made with ❤️ for web developers.</p>
          <p class="mt-1">
            Free favicon generator - no backend, no tracking, works offline.
          </p>
        </div>
        
        <div class="flex items-center space-x-4">
          <GitHubStarButton variant="footer" />
        </div>
      </div>
    </div>
  </Container>
</footer>