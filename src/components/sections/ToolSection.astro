---
import Container from '../ui/Container.astro';
import FaviconTool from '../../islands/FaviconTool.tsx';
---

<section id="generator" class="py-20 bg-gray-50">
  <Container>
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Favicon Generator
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Upload your logo, customize the settings, and download professional favicons for your website. 
        Everything happens in your browser - no files uploaded to servers.
      </p>
    </div>
    
    <!-- Tool Container -->
    <div class="bg-white rounded-2xl shadow-xl p-6 md:p-8">
      <!-- React Tool Component -->
      <FaviconTool client:load />
      
      <!-- Fallback for when JS is disabled -->
      <noscript>
        <div class="text-center py-16">
          <div class="bg-red-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4">JavaScript Required</h3>
          <p class="text-gray-600 max-w-md mx-auto">
            The favicon generator requires JavaScript to function. 
            Please enable JavaScript in your browser and refresh the page.
          </p>
        </div>
      </noscript>
    </div>
    
    <!-- Info Section -->
    <div class="mt-12 grid md:grid-cols-3 gap-6 text-center">
      <div class="bg-blue-50 rounded-xl p-6">
        <div class="text-blue-600 text-2xl mb-2">ðŸ”’</div>
        <h4 class="font-semibold text-gray-900 mb-2">100% Private</h4>
        <p class="text-sm text-gray-600">Your images are processed locally in your browser</p>
      </div>
      <div class="bg-green-50 rounded-xl p-6">
        <div class="text-green-600 text-2xl mb-2">âš¡</div>
        <h4 class="font-semibold text-gray-900 mb-2">Lightning Fast</h4>
        <p class="text-sm text-gray-600">Generate all favicon sizes in under 2 seconds</p>
      </div>
      <div class="bg-purple-50 rounded-xl p-6">
        <div class="text-purple-600 text-2xl mb-2">ðŸ“¦</div>
        <h4 class="font-semibold text-gray-900 mb-2">Complete Package</h4>
        <p class="text-sm text-gray-600">ZIP download with all files + HTML snippet</p>
      </div>
    </div>
  </Container>
</section>