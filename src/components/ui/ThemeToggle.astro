---
// Компонент переключателя темы
---

<button 
  id="theme-toggle"
  type="button"
  class="p-2 rounded-lg text-gray-600 hover:text-blue-600 hover:bg-gray-100 dark:text-gray-300 dark:hover:text-blue-400 dark:hover:bg-gray-800 transition-all duration-200"
  aria-label="Toggle theme"
>
  <!-- Sun icon (light theme) -->
  <svg 
    id="theme-toggle-light-icon" 
    class="w-5 h-5 hidden" 
    fill="currentColor" 
    viewBox="0 0 20 20"
  >
    <path 
      fill-rule="evenodd" 
      d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" 
      clip-rule="evenodd"
    ></path>
  </svg>
  
  <!-- Moon icon (dark theme) -->
  <svg 
    id="theme-toggle-dark-icon" 
    class="w-5 h-5 hidden" 
    fill="currentColor" 
    viewBox="0 0 20 20"
  >
    <path 
      d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
    ></path>
  </svg>
  
  <!-- System icon (system theme) -->
  <svg 
    id="theme-toggle-system-icon" 
    class="w-5 h-5" 
    fill="currentColor" 
    viewBox="0 0 20 20"
  >
    <path 
      fill-rule="evenodd" 
      d="M3 5a2 2 0 012-2h10a2 2 0 012 2v8a2 2 0 01-2 2h-2.22l.123.489.804.804A1 1 0 0113 18H7a1 1 0 01-.707-1.707l.804-.804L7.22 15H5a2 2 0 01-2-2V5zm5.771 7H5V5h10v7H8.771z" 
      clip-rule="evenodd"
    ></path>
  </svg>
</button>

<script>
  // Типы тем
  type Theme = 'light' | 'dark' | 'system';
  
  // Получение элементов
  const themeToggle = document.getElementById('theme-toggle');
  const lightIcon = document.getElementById('theme-toggle-light-icon');
  const darkIcon = document.getElementById('theme-toggle-dark-icon');
  const systemIcon = document.getElementById('theme-toggle-system-icon');
  const html = document.documentElement;

  // Проверка предпочтения темной темы системы
  const getSystemTheme = (): 'light' | 'dark' => {
    return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
  };

  // Получение сохраненной темы или системной по умолчанию
  const getStoredTheme = (): Theme => {
    const stored = localStorage.getItem('theme') as Theme;
    return stored || 'system';
  };

  // Применение темы
  const applyTheme = (theme: Theme) => {
    // Скрыть все иконки
    lightIcon?.classList.add('hidden');
    darkIcon?.classList.add('hidden');
    systemIcon?.classList.add('hidden');

    if (theme === 'system') {
      // Системная тема
      const systemTheme = getSystemTheme();
      if (systemTheme === 'dark') {
        html.classList.add('dark');
      } else {
        html.classList.remove('dark');
      }
      systemIcon?.classList.remove('hidden');
      localStorage.removeItem('theme');
    } else if (theme === 'dark') {
      // Темная тема
      html.classList.add('dark');
      darkIcon?.classList.remove('hidden');
      localStorage.setItem('theme', 'dark');
    } else {
      // Светлая тема
      html.classList.remove('dark');
      lightIcon?.classList.remove('hidden');
      localStorage.setItem('theme', 'light');
    }
  };

  // Переключение темы
  const toggleTheme = () => {
    const currentTheme = getStoredTheme();
    let nextTheme: Theme;

    switch (currentTheme) {
      case 'system':
        nextTheme = 'light';
        break;
      case 'light':
        nextTheme = 'dark';
        break;
      case 'dark':
        nextTheme = 'system';
        break;
      default:
        nextTheme = 'system';
    }

    applyTheme(nextTheme);
  };

  // Слушатель изменения системной темы
  const mediaQuery = window.matchMedia('(prefers-color-scheme: dark)');
  mediaQuery.addEventListener('change', () => {
    if (getStoredTheme() === 'system') {
      applyTheme('system');
    }
  });

  // Инициализация темы
  applyTheme(getStoredTheme());

  // Обработчик клика
  themeToggle?.addEventListener('click', toggleTheme);
</script>